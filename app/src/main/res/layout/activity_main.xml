<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cyy.test.customclockview.MainActivity">

    <cyy.test.clockview.ClockView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:hour_line_length="70dp"
        app:hour_line_width="4dp"
        app:minute_line_length="100dp"
        app:minute_line_width="3dp"
        app:second_line_length="150dp"
        app:second_line_width="1dp"
        app:second_line_color="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
